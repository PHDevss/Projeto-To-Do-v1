
    <%- include("header") -%>
        
        <div class="box" id="heading">
            <h1 style="text-transform:capitalize;"><%= listTitle %></h1>
        </div>

        <div class="box">
            <ul>
                <% for(let i = 0; i < itemAdicionado.length ; i++){ %>
                    <div class="item">
                        <input type="checkbox">
                        <p><%= itemAdicionado[i] %></p>
                    </div>
                    <% } %>
                </ul>
                <form action="/" method="post" class="item">
                    <input type="text" name="novoItem" id="" placeholder="Novo item..." autocomplete="off">
                    <button type="submit" name="list" value=<%= listTitle %>>+</button>
                </form>
            </div>
            
    <%- include("footer") -%>